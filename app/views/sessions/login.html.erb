
<div class="center-page-container main-background">
    <div class="form-container">
        <h1 class="my-2 text-center">Power In Numbers</h1>
        <p class="my-3 text-center">Good Afternoon</p>
        <%= form_tag "/login", method: :post do %>
        <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email,"", class: "form-control" %>
        </div>
        <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password,"", class: "form-control" %>
        </div>
        <%= submit_tag "Log In", class: "main-button" %>
        <p class="mt-4">Don't have an account? <a href="users/new">Sign Up<a></p>
        <% end %>
    <div>
</div>
